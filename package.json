{
  "name": "connect-web-sdk",
  "version": "1.2.0",
  "description": "Mastercard Open Banking Connect Web SDK",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/umd/connect-web-sdk.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "build": "npm run build:types && npm run build:cjs && npm run build:esm && npm run build:esm:min && npm run build:umd",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "build:cjs": "BABEL_ENV=cjs babel src --out-dir dist/cjs --extensions \".ts,.tsx\" --source-maps inline",
    "build:esm": "babel src --out-file dist/esm/connect-web-sdk.js --extensions \".ts,.tsx\" --ignore \"**/*.spec.ts,**/*.test.ts\" --source-maps inline",
    "build:esm:min": "BABEL_ENV=production babel src --out-file dist/esm/connect-web-sdk.min.js --extensions \".ts,.tsx\" --ignore \"**/*.spec.ts,**/*.test.ts\" --source-maps inline",
    "build:umd": "webpack --mode production",
    "dev": "npm run build -- --watch",
    "test": "jest ./src/*.spec.ts",
    "prettier-write": "prettier --write .",
    "prettier-check": "prettier --check ."
  },
  "husky": {
    "hooks": {
      "pre-push": "prettier --check ."
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.10",
    "@babel/plugin-transform-typescript": "^7.13.0",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.22",
    "babel-loader": "^9.1.3",
    "babel-preset-minify": "^0.5.2",
    "husky": "^9.0.11",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "regenerator-runtime": "^0.13.7",
    "ts-jest": "^26.5.4",
    "typescript": "^4.2.3",
    "watch": "^1.0.2",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Mastercard/connect-web-sdk.git"
  }
}
